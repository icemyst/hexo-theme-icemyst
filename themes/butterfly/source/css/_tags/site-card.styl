// 通用过渡效果
trans($time = 0.28s)
  transition: all $time ease
  -moz-transition: all $time ease
  -webkit-transition: all $time ease
  -o-transition: all $time ease

.site-card-group
  display: flex
  flex-wrap: wrap
  justify-content: flex-start
  margin: -0.5rem
  align-items: stretch

  > a
    width: calc(100% / 4 - 0.5rem)
    height: 150px
    position: relative
    display: block
    margin: 0.5rem 0.25rem
    float: left
    overflow: hidden
    padding: 0
    border-radius: 8px
    transition: all 0.3s ease 0s, transform cubic-bezier(0.71, 0.15, 0.16, 1.15) 0.6s
    box-shadow: none
    border: var(--style-border) !important

    .wrapper
      position: relative

      img
        height: 150px
        pointer-events: none
        transition: transform 0.5s ease-out !important

      .cover
        width: 100%
        position: absolute
        top: 0
        left: 0
        transition: transform 0.5s ease-out

        &.fadeIn
          animation: coverIn 0.8s ease-out forwards

    .info
      position: absolute
      top: 0
      left: 0
      display: flex
      flex-direction: column
      justify-content: center
      align-items: center
      width: 100%
      height: 100%
      overflow: hidden
      border-radius: 3px
      background-color: rgba(255, 255, 255, 0.7)
      transition: transform 0.5s cubic-bezier(0.6, 0.2, 0.1, 1) 0s
      margin-top: 0

      img
        position: relative
        top: 19px
        width: 80px
        height: 80px
        border-radius: 50%
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)
        z-index: 1
        text-align: center
        pointer-events: none

      span
        padding: 20px 10% 60px 10%
        font-size: 16px
        width: 100%
        text-align: center
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)
        background-color: rgba(255, 255, 255, 0.7)
        color: var(--font-color)
        white-space: nowrap
        overflow: hidden
        text-overflow: ellipsis

    &:hover
      border-color: #235eb3 !important
      background-color: #235eb3 !important
      box-shadow: 0 8px 12px -3px #4259ef23 !important

      .wrapper img
        transform: scale(1.2)

      .info
        transform: translateY(-100%)

  @media screen and (min-width: 2048px)
    > a
      width: calc(100% / 5 - 0.5rem)

  @media screen and (max-width: 768px)
    > a
      width: calc(100% / 3 - 0.5rem)

  @media screen and (max-width: 500px)
    > a
      width: calc(100% / 2 - 0.5rem)